 
    <%= form_for movie do |f| %>
      <div class='form-group'>
        <label>ライダー</label>
        <%=f.text_field :name, class: 'form-control'%>
      </div>
      
      <div class='form-group'>
        <label>撮影日時</label>
        <%=f.text_field :datetime, class: 'form-control'%>
      </div>
      
      <div class='form-group'>
        <label>撮影場所</label>
        <%=f.text_field :place, class: 'form-control'%>
      </div>
      
      <div class='form-group'>
        <label>YouTube URL (下11桁)</label>
        <%=f.text_field :video_id, class: 'form-control'%>
      </div>
      
      <div class='form-group'>
        <label>コメント</label>
        <%=f.text_field :self_comment, class: 'form-control'%>
      </div>
      
      <div>
        <%= f.submit class: "btn btn-success btn-block" %>
      </div>
      
    <% end %>